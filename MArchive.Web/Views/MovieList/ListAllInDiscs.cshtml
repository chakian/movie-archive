@{
    ViewBag.Title = "All Movies In Discs";
}

@PageHelper.WriteTitle("Lists", "List of all movies in discs")

<!-- List All Grid -->
<table id="tblList"></table>
<div id="divPager"></div>

<script type="text/javascript">
    $(document).ready(function () {
        var gridParams = {
            table: "#tblList",
            pager: "#divPager",
            actionLink: '@Url.Action("ListAllInDiscsJson", "MovieList")',
            columnNames: ['ID', 'Poster', 'Original', 'English', 'Turkish', 'Year', 'IMDb Rat.', 'IMDb Page'],
            columnModel: GetMovieListColumnModel(),
            sortName: 'ID',
            sortOrder: 'asc',
            gridCaption: 'All Movies'
        };

        ListInitialize(gridParams);
    });
</script>